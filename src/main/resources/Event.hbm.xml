<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "pojo.EVENT" table = "EVENT">
      
      <meta attribute = "class-description">
         This class contains the event detail. 
      </meta>
      
      <id name = "id" type = "string" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "host" column = "host" type = "string"/>
      <property name = "type" column = "type" type = "string"/>
      <property name = "duration" column = "duration" type = "integer"/>
      <property name = "alert" column = "alert" type = "boolean"/>
      
   </class>
</hibernate-mapping>